rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Config: Only admins can write thresholds
    match /config/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Coops: Only admins can control actuators (write)
    match /coops/{coopId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Users: Users can read their own profile, but role field is protected
    match /users/{userId} {
      // Anyone can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can update non-sensitive fields (not role)
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      // New user creation: Only Cloud Functions (admin SDK) or self-creation with viewer role
      allow create: if request.auth != null 
        && request.auth.uid == userId 
        && request.resource.data.role == 'viewer';
    }
    
    // Telemetry History: Read-only for authenticated app users
    // Writes are done via Cloud Functions (bypasses rules)
    match /telemetry_history/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Daily Stats: Read-only for authenticated users
    match /daily_stats/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}